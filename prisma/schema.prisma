generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ============================================
// Multi-Tenancy
// ============================================

model Organization {
  id                   String   @id @default(cuid())
  name                 String
  slug                 String   @unique
  fiscalYearStartMonth Int      @default(1)
  defaultHoursPerWeek  Int      @default(40)
  capacityAmber        Int      @default(75)
  capacityRed          Int      @default(90)
  holidays             Json     @default("[]")
  roleTemplates        Json     @default("[]")
  blendedRate          Float    @default(95)
  estimationConfig     Json     @default("{}")
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  users           User[]
  teams           Team[]
  projects        Project[]
  resources       Resource[]
  scenarios       Scenario[]
  teamEstimates   TeamEstimate[]
  assignments     ResourceAssignment[]
  contractors     Contractor[]
  priorityOverrides PriorityOverride[]
  ptoEntries      PTOEntry[]
  newHires        NewHire[]
  actuals         ActualEntry[]
  auditLogs       AuditLog[]
  skillRequirements ProjectSkillRequirement[]
  holidayEntries    Holiday[]

  @@index([slug])
}

// ============================================
// Auth & Users
// ============================================

model User {
  id             String   @id @default(cuid())
  email          String   @unique
  name           String?
  passwordHash   String
  role           String   @default("MEMBER") // OWNER, ADMIN, MEMBER, VIEWER
  lastActiveAt   DateTime?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  orgId String
  org   Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)

  auditLogs AuditLog[]

  @@index([orgId])
  @@index([email])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ============================================
// Core Data Models
// ============================================

model Team {
  id                 String   @id @default(cuid())
  name               String
  description        String   @default("")
  department         String   @default("")
  costCenter         String   @default("")
  managerName        String   @default("")
  location           String   @default("")
  timezone           String   @default("America/New_York")
  pmFte              Float    @default(0)
  productManagerFte  Float    @default(0)
  uxDesignerFte      Float?
  businessAnalystFte Float    @default(0)
  scrumMasterFte     Float    @default(0)
  architectFte       Float    @default(0)
  developerFte       Float    @default(0)
  qaFte              Float    @default(0)
  devopsFte          Float    @default(0)
  dbaFte             Float    @default(0)
  kloTlmHoursPerWeek Float    @default(0)
  adminPct           Float    @default(25)
  skills             Json     @default("[]")
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  orgId String
  org   Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)

  teamEstimates TeamEstimate[]
  contractors   Contractor[]
  resources     Resource[]
  ptoEntries    PTOEntry[]
  newHires      NewHire[]
  actuals       ActualEntry[]

  @@index([orgId])
}

model Project {
  id              String   @id @default(cuid())
  name            String
  priority        Int
  status          String   @default("not_started")
  startWeekOffset Int      @default(0)
  description     String   @default("")
  tshirtSize      String?
  category        String?
  sponsor         String?
  businessValue   String?
  estimatedRoi    String?
  strategicNotes  String?
  targetStartDate String?
  targetEndDate   String?
  riskMitigation  String?
  requiredSkills  Json     @default("[]")
  dependencies    Json     @default("[]")
  milestones      Json     @default("[]")
  actualHours     Json     @default("{}")
  statusHistory   Json     @default("[]")
  quarterTarget   String?
  riskLevel       String?
  riskNotes       String?
  committedDate   String?
  workflowStatus        String   @default("submitted")
  estimatedCost         Float?
  capexAmount           Float?
  opexAmount            Float?
  estimatedWeeks        Float?
  teamSizeRecommended   Float?
  testingModel          String?
  estimationConfig      Json     @default("{}")
  approvedBy            String?
  approvedAt            DateTime?
  submittedBy           String?
  submittedAt           DateTime?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  orgId String
  org   Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)

  teamEstimates     TeamEstimate[]
  priorityOverrides PriorityOverride[]
  actuals           ActualEntry[]
  assignments       ResourceAssignment[]
  skillRequirements ProjectSkillRequirement[]

  @@index([orgId])
  @@index([orgId, priority])
}

model TeamEstimate {
  id          String @id @default(cuid())
  projectId   String
  teamId      String
  design      Float  @default(0)
  development Float  @default(0)
  testing     Float  @default(0)
  deployment  Float  @default(0)
  postDeploy  Float  @default(0)
  roleBreakdown Json     @default("{}")
  confidence  String? // high, medium, low
  devHours        Float    @default(0)
  calculatedPhases Json    @default("{}")

  orgId String
  org   Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  team    Team    @relation(fields: [teamId], references: [id], onDelete: Cascade)

  @@unique([projectId, teamId])
  @@index([orgId])
}

model Scenario {
  id        String   @id @default(cuid())
  name      String
  locked    Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  orgId String
  org   Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)

  priorityOverrides PriorityOverride[]
  contractors       Contractor[]

  @@index([orgId])
}

model PriorityOverride {
  id         String @id @default(cuid())
  scenarioId String
  projectId  String
  priority   Int

  orgId String
  org   Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)

  scenario Scenario @relation(fields: [scenarioId], references: [id], onDelete: Cascade)
  project  Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@unique([scenarioId, projectId])
  @@index([orgId])
}

model Contractor {
  id         String @id @default(cuid())
  scenarioId String
  teamId     String
  roleKey    String
  fte        Float
  weeks      Int
  label      String
  startWeek  Int    @default(0)

  orgId String
  org   Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)

  scenario Scenario @relation(fields: [scenarioId], references: [id], onDelete: Cascade)
  team     Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)

  @@index([orgId])
}

// ============================================
// Resources & Assignments
// ============================================

model Resource {
  id               String   @id @default(cuid())
  name             String
  title            String
  roleType         String
  seniority        String
  hireDate         String
  employeeId       String   @default("")
  isContractor     Boolean  @default(false)
  endDate          String?
  annualSalary     Float?
  hourlyCostRate   Float    @default(0)
  baseHoursPerWeek Float    @default(40)
  trainingPct      Float    @default(0)
  onCallPct        Float    @default(0)
  rampUpWeeks      Int      @default(0)
  rampUpStart      String?
  notes            String   @default("")
  skills           Json     @default("[]")
  ptoBlocks        Json     @default("[]")
  avatarColor      String   @default("#3b82f6")
  email            String   @default("")
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  orgId  String
  org    Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)
  teamId String
  team   Team         @relation(fields: [teamId], references: [id], onDelete: Cascade)

  assignments ResourceAssignment[]

  @@index([orgId])
  @@index([teamId])
}

model ResourceAssignment {
  id            String @id @default(cuid())
  resourceId    String
  projectId     String
  role          String
  allocationPct Float
  startWeek     Int
  endWeek       Int

  orgId String
  org   Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)

  resource Resource @relation(fields: [resourceId], references: [id], onDelete: Cascade)
  project  Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([orgId])
  @@index([resourceId])
  @@index([projectId])
}

model ProjectSkillRequirement {
  id              String @id @default(cuid())
  projectId       String
  skillName       String
  minProficiency  Int

  orgId String
  org   Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([orgId])
  @@index([projectId])
}

// ============================================
// Workforce Planning
// ============================================

model PTOEntry {
  id           String @id @default(cuid())
  teamId       String
  resourceId   String?
  role         String
  personName   String
  startDate    String   @default("")
  endDate      String   @default("")
  startWeek    Int
  endWeek      Int
  hoursPerDay  Float    @default(8)
  hoursPerWeek Float
  ptoType      String   @default("Vacation")
  status       String   @default("Planned")
  reason       String
  notes        String   @default("")

  orgId String
  org   Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)
  team  Team         @relation(fields: [teamId], references: [id], onDelete: Cascade)

  @@index([orgId])
  @@index([resourceId])
}

model Holiday {
  id          String @id @default(cuid())
  name        String
  date        String
  week        Int
  hoursOff    Float  @default(8)
  recurring   Boolean @default(true)
  holidaySet  String  @default("US Federal")

  orgId String
  org   Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)

  @@index([orgId])
}

model NewHire {
  id         String @id @default(cuid())
  teamId     String
  role       String
  personName String
  startWeek  Int
  rampWeeks  Int

  orgId String
  org   Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)
  team  Team         @relation(fields: [teamId], references: [id], onDelete: Cascade)

  @@index([orgId])
}

model ActualEntry {
  id        String @id @default(cuid())
  projectId String
  teamId    String
  phase     String
  week      Int
  hours     Float
  notes     String?

  orgId String
  org   Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  team    Team    @relation(fields: [teamId], references: [id], onDelete: Cascade)

  @@index([orgId])
  @@index([projectId])
}

// ============================================
// Audit Log
// ============================================

model AuditLog {
  id        String   @id @default(cuid())
  action    String   // CREATE, UPDATE, DELETE
  entity    String   // Team, Project, Resource, etc.
  entityId  String
  changes   Json?
  createdAt DateTime @default(now())

  orgId  String
  org    Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)
  userId String
  user   User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([orgId])
  @@index([orgId, entity])
  @@index([orgId, createdAt])
}
